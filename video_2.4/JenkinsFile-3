pipeline {
    agent { docker 'gradle:4.5-jdk8-alpine' }
    stages {
        stage ('Checkout') {
          steps {
            git 'https://github.com/effectivejenkins/jenkins_3_database_migration.git'
          }
        }
        stage('Build') {
            steps {
                sh 'gradle clean build'
            }
        }
        stage('Migration') {
            steps {
                sh 'gradle migrateStaging'
            }
        }
        stage('Deploy') {
            steps {
                sh 'gradle deploy'
            }
        }
    }
    post {
        always {
            junit 'build/test-results/**/TEST-*.xml'
        }
    }
}
